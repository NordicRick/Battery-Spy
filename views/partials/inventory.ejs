<div class="card card-chart d-flex bg-dark text-white border-white border-1 rounded-2 h-50">
    <div class="card-header bg-dark text-white border-white border-1 rounded-2">
        <div class="row d-flex bg-dark text-white border-white border-1 rounded-2">
            <div class="col-md-6 text-start bg-dark text-white border-white border-1 rounded-2">
                <h5 class="card-title">Battery Inventory</h5>
                <h2 id="totalBatteries">Loading...</h2>
            </div>
            <div class="col-md-6 text-end">
                <div class="btn-group btn-group-toggle float-end border border-white border-1 rounded-2" data-bs-toggle="buttons">
                    <label class="btn btn-sm btn-dark border-end border-white border-1 active" id="btn-totals">Totals</label>
                    <label class="btn btn-sm btn-dark border border-white border-1" id="btn-platforms">Platforms</label>
                    <label class="btn btn-sm btn-dark border-start border-white border-1" id="btn-sizes">Sizes</label>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body bg-dark">
        <canvas id="batteryChart" style="max-height: 300px;"></canvas>
    </div>
</div>
<div class="card card-chart d-flex bg-dark text-white border-white border-1 rounded-2 mt-5 shadows">
    <div class="card-header text-white border-white border-1 rounded-2">
        <div class="row d-flex text-white border-white border-1 rounded-2">
            <div class="col-md-12 text-start bg-dark text-white border-white border-1 rounded-2" style="background-color: #373636;">
                <h5 class="card-title">Battery Inventory</h5>
                <h4>Details</h4>
            </div>
        </div>
    </div>
    <div class="card-body bg-dark p-0" style="max-height: 400px; overflow-y: auto;">
        <div class="table-responsive">
            <table class="table table-dark table-striped table-hover mb-0" style="background-color: #373636;">
                <thead class="sticky-top" style="background-color: #373636; z-index: 10;">
                    <tr>
                        <th>Serial Number</th>
                        <th>Platform Model</th>
                        <th>Capacity (mAh)</th>
                        <th>Status</th>
                        <th>Purchase Date</th>
                    </tr>
                </thead>
                <tbody id="batteryTableBody">
                    <tr>
                        <td colspan="5" class="text-center">Loading batteries...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>